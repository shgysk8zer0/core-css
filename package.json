{
  "name": "core-css",
  "version": "2.4.0",
  "description": "A collection of stylesheets that enable quick and easy styling with customization",
  "private": true,
  "config": {
    "serve": {
      "domain": "localhost",
      "path": "./",
      "port": 8080
    },
    "dir": {
      "css": "'./**.css'"
    }
  },
  "scripts": {
    "start": "http-server ${npm_package_config_serve_path} -p ${npm_package_config_serve_port} -a ${npm_package_config_serve_domain} -o",
    "test": "stylelint './**.css'",
    "fix": "stylelint './**.css' --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shgysk8zer0/core-css.git"
  },
  "keywords": [
    "css",
    "postcss",
    "style",
    "native-css",
    "css3",
    "custom-properties",
    "css-vars"
  ],
  "author": "Chris Zuber <admin@kernvalley.us>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shgysk8zer0/core-css/issues"
  },
  "homepage": "https://github.com/shgysk8zer0/core-css#readme",
  "devDependencies": {
    "http-server": "^0.12.3",
    "stylelint": "^13.13.0",
    "stylelint-config-recommended": "^4.0.0",
    "stylelint-config-standard": "^21.0.0"
  },
  "dependencies": {}
}
