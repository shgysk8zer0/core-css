{
  "name": "core-css",
  "version": "2.4.0",
  "description": "A collection of stylesheets that enable quick and easy styling with customization",
  "private": true,
  "config": {
    "serve": {
      "domain": "localhost",
      "path": "./",
      "port": 8080
    },
    "dir": {
      "css": "'./**.css'"
    }
  },
  "scripts": {
    "start": "http-server ${npm_package_config_serve_path} -c-1 --port ${npm_package_config_serve_port} --gzip true --brotli true -a ${npm_package_config_serve_domain} -o",
    "preversion": "npm test",
    "test": "stylelint './**.css'",
    "fix": "stylelint './**.css' --fix",
    "create:lock": "npm i --package-lock-only --ignore-scripts",
    "version:bump": "npm run version:bump:patch",
    "version:bump:patch": "npm version --no-git-tag-version patch",
    "version:bump:minor": "npm version --no-git-tag-version minor",
    "version:bump:major": "npm version --no-git-tag-version major"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shgysk8zer0/core-css.git"
  },
  "keywords": [
    "css",
    "postcss",
    "style",
    "native-css",
    "css3",
    "custom-properties",
    "css-vars"
  ],
  "author": "Chris Zuber <admin@kernvalley.us>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shgysk8zer0/core-css/issues"
  },
  "homepage": "https://github.com/shgysk8zer0/core-css#readme",
  "devDependencies": {
    "http-server": "^14.1.1",
    "stylelint": "^15.5.0",
    "stylelint-config-recommended": "^11.0.0",
    "stylelint-config-standard": "^32.0.0"
  },
  "dependencies": {}
}
