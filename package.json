{
  "name": "core-css",
  "version": "2.1.0",
  "description": "A collection of stylesheets that enable quick and easy styling with customization",
  "private": true,
  "config": {
    "serve": {
      "domain": "localhost",
      "path": "./",
      "port": 8080
    },
    "dir": {
      "css": "./*.css"
    }
  },
  "scripts": {
    "start": "netlify dev --live",
    "test": "stylelint ${npm_package_config_dir_css}",
    "fix": "stylelint ${npm_package_config_dir_css} --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shgysk8zer0/core-css.git"
  },
  "keywords": [
    "css",
    "postcss",
    "style",
    "native-css",
    "css3",
    "custom-properties",
    "css-vars"
  ],
  "author": "Chris Zuber <admin@kernvalley.us>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shgysk8zer0/core-css/issues"
  },
  "homepage": "https://github.com/shgysk8zer0/core-css#readme",
  "devDependencies": {
    "stylelint": "^10.1.0",
    "stylelint-config-recommended": "^2.2.0",
    "stylelint-config-standard": "^20.0.0"
  },
  "dependencies": {
    "netlify-cli": "^2.54.0"
  }
}
